<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LawTechTeam.Views.LoginPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Grid VerticalOptions="CenterAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Entry Placeholder="Username" Text="{Binding Username}" Grid.Row="0"/>
                    <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" Grid.Row="1"/>
                    <Button Text="Login" Grid.Row="2" BackgroundColor="#0077be" TextColor="White" Command="{Binding LoginCommand}"/>
                    <Button Text="SignUp" Grid.Row="3" Command="{Binding RegisterCommand}"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>