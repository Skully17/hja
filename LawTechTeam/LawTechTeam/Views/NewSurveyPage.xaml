<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LawTechTeam.Views.NewSurveyPage"
             Shell.PresentationMode="ModalAnimated"
             Title="New Survey"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="DefaultTextStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource Primary}"/>
                <Setter Property="FontSize" Value="Medium"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="3" Padding="15">
                <Label Text="Detainee Age" Style="{DynamicResource DefaultTextStyle}" />
                <Entry Text="{Binding DetaineeAge, Mode=TwoWay}" FontSize="Medium" />
				<Label Text="Detainee Race" Style="{DynamicResource DefaultTextStyle}" />
                <RadioButton Content="British" Value="{Binding British}" Style="{DynamicResource DefaultTextStyle}" GroupName="Race" />
                <RadioButton Content="Hispanic" Value="{Binding Hispanic}" Style="{DynamicResource DefaultTextStyle}" GroupName="Race" />
                <RadioButton Content="Black" Value="{Binding Black}" Style="{DynamicResource DefaultTextStyle}" GroupName="Race" />
                <RadioButton Content="Asian" Value="{Binding Asian}" Style="{DynamicResource DefaultTextStyle}" GroupName="Race" />
				<Label Text="Is the Detainee a UK Citizen" Style="{DynamicResource DefaultTextStyle}" />
                <Entry Text="{Binding IsUKCitizen, Mode=TwoWay}" FontSize="Medium" Margin="0" />
				<Label Text="Has the Detainee ever experienced racism before" Style="{DynamicResource DefaultTextStyle}" />
                <Entry Text="{Binding HasExperiencedRacism, Mode=TwoWay}" FontSize="Medium" Margin="0" />
				<Label Text="If the previous question was answered yes, please provide further details of this experience" Style="{DynamicResource DefaultTextStyle}" />
                <Editor Text="{Binding RacismExperience, Mode=TwoWay}" AutoSize="TextChanges" FontSize="Medium" Margin="0" />
				<Label Text="Has the detainee experienced racial discrimination during their time here?" Style="{DynamicResource DefaultTextStyle}" />
                <Entry Text="{Binding RacismExperiencedAtStation, Mode=TwoWay}" FontSize="Medium" Margin="0" />
				<Label Text="If the answer to the above was 'Yes' please further details of the detainees experience" Style="{DynamicResource DefaultTextStyle}" />
                <Editor Text="{Binding RacismExperiencedAtStationExample, Mode=TwoWay}" AutoSize="TextChanges" FontSize="Medium" Margin="0" />
                <StackLayout Orientation="Horizontal">
                    <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                    <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    
</ContentPage>
